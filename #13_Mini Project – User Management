        VALUES ('$username', '$email', '$password')";

if ($conn->query($sql) === TRUE) {
    echo "ุชู ุงูุชุณุฌูู ุจูุฌุงุญ!";
} else {
    echo "ุฎุทุฃ: " . $conn->error;
